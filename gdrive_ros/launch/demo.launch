<launch>
  <arg name="settings_yaml" default="$(optenv GOOGLE_DRIVE_SETTINGS_YAML /var/lib/robot/pydrive_settings.yaml)" />
  <arg name="file_name" />
  <arg name="file_title" />
  <arg name="parents_id" />

  <node name="gdrive_server" pkg="gdrive_ros" type="gdrive_server_node.py"
        output="screen">
    <rosparam subst_value="true">
      settings_yaml: $(arg settings_yaml)
    </rosparam>
  </node>

  <node name="sample_gdrive_ros_client" pkg="gdrive_ros" type="sample-gdrive-ros-client.l">
    <rosparam subst_value="true">
        file_name: $(arg file_name)
        file_title: $(arg file_title)
        parents_id: $(arg parents_id)
    </rosparam>
  </node>
</launch>
